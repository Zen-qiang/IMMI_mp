.contents {
  position: relative;
  height: 150rpx;
  border-radius: 5px;
  overflow: hidden;
  font-size: 28rpx;
}

.con {
  width: 100%;
  height: 150rpx;
  position: absolute;
  top: 0;
}

.maskView {
  z-index: 10;
}

.bkg {
  z-index: 20;
  background-color: #f6f6f6;
  opacity: 0.3;
}

.msgView {
  z-index: 30;
}

/*  */

.msgView text {
  display: block;
  font-weight: 600;
}

.status {
  width: 100%;
  text-align: right;
  color: #333;
  margin-top: 10rpx;
  padding-right: 30rpx;
  box-sizing: border-box;
}

.title {
  width: 100%;
  text-align: center;
  font-size: 38rpx;
  color: #fff;
  margin-top: 10rpx;
}

/*  */

.maskView image {
  width: 100%;
  height: 150rpx;
}
