/* components/oneCellThreePdt/index.wxss */

.three-pdt-item {
  padding-bottom: 60%;
  position: relative;
  /* margin-top: 5px; */
}

.three-pdt-item > .box {
  position: absolute;
  width: 100%;
  height: 100%;
  /* background-color: blue; */
  box-sizing: border-box;
  padding: 0 5px;
}

.three-pdt-item > .box > .content {
  position: relative;
  width: 100%;
  height: 70%;
  /* background-color: yellow; */
  box-sizing: border-box;
  padding: 5px;
  background-color: #fff;
}

.three-pdt-item > .box > .content > image {
  width: 100%;
  height: 100%;
}

.three-pdt-item > .box > .info {
  position: relative;
  width: 100%;
  height: 30%;
  /* background-color: red; */
}

.three-pdt-item > .box > .info > .prodCode {
  margin-top: 2px;
  text-align: center;
  color: #999;
  font-size: 12px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.three-pdt-item > .box > .info > .prodName {
  margin-top: 2px;
  text-align: center;
  color: #333;
  font-size: 14px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.three-pdt-item > .box > .info > .prodPrice {
  margin-top: 2px;
  text-align: center;
  font-size: 12px;
}

.three-pdt-item > .box > .info > .prodPrice > .priceStandard {
  color: #999;
  margin-right: 5px;
  text-decoration: line-through;
}

.three-pdt-item > .box > .info > .prodPrice > .priceDiscount {
  color: #f44;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  display: block;
  width: 100%;
}
