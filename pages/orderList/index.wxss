/* pages/orderList/index.wxss */

.contents {
  width: 100%;
}

.fix {
  position: fixed;
  top: 0;
}

.sortView {
  font-size: 22rpx;
}

.sortView .text {
  height: 60rpx;
  line-height: 60rpx;
  margin: 0 40rpx;
  border-bottom: 1px solid #f0f0f0;
}

.showMsg {
  font-size: 24rpx;
  background-color: #f6f6f6;
  color: #333;
  padding: 0 30rpx;
}

.showMsg .row {
  border-bottom: 1px dashed #e9e9e9;
  padding: 10rpx 0;
}
