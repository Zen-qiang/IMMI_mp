Page {
  box-sizing: border-box;
  padding-bottom: calc(48px + constant(safe-area-inset-bottom));
  padding-bottom: calc(48px + env(safe-area-inset-bottom));
  padding-top: 140rpx;
  background-color: #f7f7f7;
}
.tabContainer {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 1;
}
.listItem {
  padding: 5px 15px;
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
}
.listItem .radio {
  margin-right: 15px;
}
.listItem .pdtcell {
  flex: 1;
}

.summary {
  position: fixed;
  top: 100rpx;
  left: 0;
  right: 0;
  height: 40rpx;
  font-size: 12px;
  background: #fff;
  padding: 0 40rpx;
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  align-items: center;
  z-index: 1;
}

.ctrlContainer {
  position: fixed;
  bottom: constant(safe-area-inset-bottom);
  bottom: env(safe-area-inset-bottom);
  left: 0;
  right: 0;
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-around;
}
.ctrlContainer .ctrlBtn {
  transform: translateY(-140%);
  padding-left: 20px;
  padding-right: 20px;
}